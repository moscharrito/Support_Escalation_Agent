# Support Escalation Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys
# =============================================================================

# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Application API Key for authenticating requests
API_KEY=your-secure-api-key-here

# Additional API keys (comma-separated, optional)
ADDITIONAL_API_KEYS=

# =============================================================================
# Database Configuration
# =============================================================================

# MongoDB connection URL
MONGODB_URL=mongodb://localhost:27017

# Database name
DATABASE_NAME=support_escalation

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis connection URL (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Vector Database (Qdrant)
# =============================================================================

# Qdrant server URL
QDRANT_URL=http://localhost:6333

# Qdrant API key (if using cloud)
QDRANT_API_KEY=

# =============================================================================
# Model Configuration
# =============================================================================

# Default Claude model
DEFAULT_MODEL=claude-sonnet-4-20250514

# Maximum tokens for responses
MAX_TOKENS=2000

# Embedding model for RAG
EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# Application Settings
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Server port
PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Guardrails Configuration
# =============================================================================

# Confidence threshold for auto-response (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.75

# Perspective API key for toxicity detection (optional)
PERSPECTIVE_API_KEY=

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Prometheus metrics endpoint enabled
METRICS_ENABLED=true

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# =============================================================================
# Notifications (optional)
# =============================================================================

# Slack webhook URL for escalation notifications
SLACK_WEBHOOK_URL=

# Email SMTP settings for notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=
